<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.instagram.mapper.UserMapper">

    <select id="getUser" resultType="com.example.instagram.domain.Member">
        SELECT * FROM member WHERE user_id = #{userId} AND user_pw = #{userPw}
    </select>

    <insert id="insertMemberSecure">
        INSERT INTO member_secure(user_id,private_key,public_key) VALUES (#{userId},#{privateKey},#{publicKey})
    </insert>

    <insert id="insertMember">
        INSERT INTO member(name,email,user_id,user_pw,phone,nickname) VALUES (#{name},#{email},#{userId},#{userPw},#{phone},#{nickname})
    </insert>



</mapper>